---
import NavLink from "./nav-link";

const currentPath = Astro.url.pathname;
---

<header class="py-3">
    <nav class="flex flex-row gap-3">
        <NavLink client:load href="/" shortcut="h" className={currentPath === "/" ? "current" : ""}>
            <span>[h]</span><span>home</span></NavLink
        >
        <NavLink client:load href="/projects" shortcut="p" className={currentPath === "/projects" ? "current" : ""}>
            <span>[p]</span><span>projects</span></NavLink
        >
        <NavLink client:load href="https://github.com/natlus" shortcut="g"><span>[g]</span><span>github</span></NavLink>
    </nav>
</header>
